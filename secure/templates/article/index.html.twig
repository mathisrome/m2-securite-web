{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main class="container pt-5">
        <a href="{{ path("articles_create") }}" class="btn btn-primary mb-3">Create article</a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Filename</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <th scope="row">{{ article.id }}</th>
                        <td>{{ article.title }}</td>
                        <td>{{ article.originalImageFilename }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-dark" href="{{ path("articles_edit", {'id': article.id}) }}">Edit</a>
                                <a class="btn btn-warning" href="{{ path("articles_detail", {'id': article.id}) }}">Detail</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
